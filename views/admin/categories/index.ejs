
<%- include('../header') %>

<!-- ========================= SECTION PAGETOP ========================= -->
<section class="section-pagetop bg-primary">
    <div class="container clearfix">
        <h2 class="title-page">Admin</h2>
    
        <nav class="float-left">
        <ol class="breadcrumb text-white">
            <li class="breadcrumb-item"><a href="/">Home</a></li>            
            
        </ol>  
        </nav>
    </div> <!-- container //  -->
    </section>
    <!-- ========================= SECTION INTRO END// ========================= -->
<!-- ========================= SECTION CONTENT ========================= -->
<section class="section-content bg padding-y">
    <div class="container">
    
    <div class="row">
            <p>
                    <a href="/admin/categorias/nova" class="btn btn-primary">Novo</a>
                    
                </p>
                
        <main class="col-sm-12">
        
            <% categories.forEach( category => { %>
                <article class="card card-product">
                    <div class="card-body">
                    <div class="row">
                        <article class="col-sm-9">
                                <h2 class="title text-black"><%- category.category %>  </h2>
                        </article> <!-- col.// --> 
                        <aside class="col-sm-3 border-left">
                                <div class="action-wrap">
                                   
                                    <p>
                                        <a href="/admin/categorias/editar/<%- category.id %>" class="btn btn-success">Editar</a>
                                        <a href="/admin/categorias/excluir/<%- category.id %>" class="btn btn-danger"> excluir  </a>
                                    </p>
                                    
                                </div> <!-- action-wrap.// -->
                            </aside> <!-- col.// -->

                    </div> <!-- row.// -->
                    </div> <!-- card-body .// -->
                </article> <!-- card product .// -->
            
                <% }) %>
               
    
        </main> <!-- col.// -->
    </div>
    
    </div> <!-- container .//  -->
    </section>
    
    <!-- ========================= SECTION  END// ========================= -->

    <%- include('../footer') %>